@model Classifieds.Areas.Admin.Models.ViewModels.BulkUploadC4Plus
@{
    ViewBag.Title = "Bulk-upload ";
}

<h2>Bulk upload listings from c4+</h2>
@if (!String.IsNullOrEmpty(ViewBag.echo))
{
    <p class="alert alert-success">
        @ViewBag.echo
    </p>
}
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <p class="alert alert-success">
        @ViewBag.Message
    </p>
}
@using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(m => Model.ContentJson,10, 100, new { placeholder="Paste print classifieds json here", @class="form-control",style="max-width:70%;"})
                @Html.ValidationMessageFor(model => Model.ContentJson, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(m => Model.MapperJson, 5, 100, new { placeholder = "Paste category mapper json here", @class = "form-control", style = "max-width:70%;" })
                @Html.ValidationMessageFor(model => Model.MapperJson, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Run" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
