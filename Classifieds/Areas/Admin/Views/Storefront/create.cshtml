@model Classifieds.Areas.Admin.Models.ViewModels.CreateStorefrontViewModel
@{
    ViewBag.Title = "New Storefront";
}

<h2>Add new Storefront</h2>
<p>
    @Html.ActionLink("Cancel", "index", null,new { @class = "btn btn-info" })
</p>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

