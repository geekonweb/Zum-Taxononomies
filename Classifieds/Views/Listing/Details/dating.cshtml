@model Classifieds.Models.ViewModels.DatingViewModel

@{
    ViewBag.Title = @Model.Title;
    Layout = "~/Views/Shared/Layouts/_ListingDetails.cshtml";
}

@*<h2><i class="glyphicon glyphicon-search"></i> #@Html.DisplayFor(c=>Model.Title)</h2>*@
@if (ViewBag.crumbs != null)
{
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "index", "home")</li>
        @{
    SortedDictionary<string, int> crumbs = (SortedDictionary<string, int>)ViewBag.crumbs;
    foreach (var crumb in crumbs)
    {
        <li>@Html.ActionLink(crumb.Key, "index", "browse", new { cat = crumb.Value }, new { })</li>
    }
        }
    </ol>
}
<div class="listing-details">
@Html.Partial("_ListingDetails",Model)
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm more-details">
                <ul class="nav nav-tabs ">
                    <li class="active"><a href="#hot" data-toggle="tab">More Details</a></li>
                    <li><a href="#contact" data-toggle="tab">Contact Seller</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="hot">
                        <div class="list-more">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <table class="table">
                                        @if (!String.IsNullOrEmpty(Model.Type))
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@Html.DisplayNameFor(m => m.Type)</strong>
                                                </td>
                                                <td>@Html.DisplayFor(m => m.Type)</td>
                                            </tr>
                                        }
                                        @if (Model.Age > 0)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@Html.DisplayNameFor(m => m.Age)</strong>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => m.Age)
                                                </td>
                                            </tr>
                                        }
                                        @if (Model.Height > 0)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@Html.DisplayNameFor(m => m.Height)</strong>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => m.Height)
                                                </td>
                                            </tr>
                                        }
                                       @if (!String.IsNullOrEmpty(Model.Sex))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Sex)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Sex)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Interests))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Interests)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Interests)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Religion))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Religion)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Religion)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Occupation))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Occupation)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Occupation)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Nationality))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Nationality)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Nationality)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Ethnicity))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Ethnicity)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Type)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Smoke))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Smoke)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Smoke)</td>
                                        </tr>
                                       }
                                       @if (!String.IsNullOrEmpty(Model.Drink))
                                       {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayNameFor(m => m.Drink)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(m => m.Drink)</td>
                                        </tr>
                                       }
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="tab-pane fade" id="contact">
                       @Html.Partial("_ContactSeller")
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

