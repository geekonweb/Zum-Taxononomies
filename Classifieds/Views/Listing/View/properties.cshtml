@model Classifieds.Models.ViewModels.PropertiesViewModel

@{
    ViewBag.Title = "View Details";
    Layout = "~/Views/Shared/Layouts/_MyAccount.cshtml";
}

<h2><i class="glyphicon glyphicon-search"></i> Details for #@Model.Title</h2>
<p>
    @Html.ActionLink("Back to listings", "index", "listing", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Update details", "edit", "listing", new { id = Model.ListingId }, new { @class = "btn btn-info" })
    @Html.ActionLink("Change pictures", "images", "listing", new { id = Model.ListingId }, new { @class = "btn btn-info" })
</p>
<ol class="breadcrumb">
    <li>@Html.ActionLink("Dashboard", "dashboard", "account")</li>
    <li>@Html.ActionLink("Listings", "index", "listing")</li>
    <li>Details</li>
</ol>
<div class="details">

    <fieldset>
        <legend> <i class="glyphicon glyphicon-time"></i> Time</legend>
        <dl class="dl-horizontal">
            <dt>Created</dt>
            <dd>@Model.Created</dd>
            <dt>Updated</dt>
            <dd>@Model.Updated</dd>
            <dt>Expires</dt>
            <dd>@Model.Expires</dd>
        </dl>
    </fieldset>
    <fieldset>
        <legend><i class="glyphicon glyphicon-zoom-in"></i>  Listing Details</legend>
        <dl class="dl-horizontal">
            <div class="status_glyph" style="text-align:left">
                <dt>Status  </dt>
                <dd>
                    @if (Model.Status == "live")
                    {
                        <i class="glyphicon glyphicon-ok green" rel="tooltip" data-placement="right" title="Live"></i>
                    }
                    else
                    {
                        <i class="glyphicon glyphicon glyphicon-ban-circle " rel="tooltip" data-placement="right" title="Suspended"></i>
                    }
                </dd>
            </div>
            <dt>Pictures</dt>
            <dd>
                @if (Model.Images != null && Model.Images.Count() > 0)
                {
                    foreach (var image in Model.Images)
                    {
                        <div class="listing-image">
                            <a href="@Url.Action("images", "listing", new { id=Model.ListingId})">
                                <img align="left" height="100" src="~/Images/listings/small/@image.Name" />
                            </a>
                        </div>
                    }
                }
            </dd>
            <dt>Category</dt>
            <dd>@Html.DisplayFor(model => model.Category.Title)</dd>
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>
            <dt>Price</dt>
            <dd>@Html.DisplayFor(model => model.Price)</dd>
            <dt>@Html.DisplayNameFor(model => model.Town)</dt>
            <dd>@Html.DisplayFor(model => model.Town)</dd>

            <dt>
                @Html.DisplayNameFor(model => model.Suburb)
            </dt>
            <dd>@Html.DisplayFor(model => model.Suburb)</dd>
            <dt>
                @Html.DisplayNameFor(model => model.Bedrooms)
            </dt>
            <dd>@Html.DisplayFor(model => model.Bedrooms)</dd>  
            <dt>
                @Html.DisplayNameFor(model => model.Bathrooms)
            </dt>
            <dd>@Html.DisplayFor(model => model.Bathrooms)</dd>
            <dt>
                @Html.DisplayNameFor(model => model.Garages)
            </dt>
            <dd>@Html.DisplayFor(model => model.Garages)</dd>  
            <dt>
                @Html.DisplayNameFor(model => model.Boreholes)
            </dt>
            <dd>@Html.DisplayFor(model => model.Boreholes)</dd>      
            <dt>
                @Html.DisplayNameFor(model => model.Power)
            </dt>
            <dd>@Html.DisplayFor(model => model.Power)</dd>
            <dt>
                @Html.DisplayNameFor(model => model.BuildingArea)
            </dt>
            <dd>@Html.DisplayFor(model => model.BuildingArea)</dd>
            <dt>
                @Html.DisplayNameFor(model => model.LandArea)
            </dt>
            <dd>@Html.DisplayFor(model => model.LandArea)</dd>
        </dl>
    </fieldset>
</div>
<hr />
<p>
    @Html.ActionLink("Back to listings", "index", "listing", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Update details", "edit", "listing", new { id = Model.ListingId }, new { @class = "btn btn-info" })
    @Html.ActionLink("Change pictures", "images", "listing", new { id = Model.ListingId }, new { @class = "btn btn-info" })
</p>