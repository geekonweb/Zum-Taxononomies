@using Microsoft.AspNet.Identity
@using Classifieds.Models.SearchViewModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/png" href="~/Images/favicon.png" />
    <!--[if IE]>
    <link rel="shortcut icon" href="~/Images/favicon.png" type="image/vnd.microsoft.icon" />
    <![endif]-->
    @RenderSection("styles", false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top topbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse main-menu">
                @Html.Partial("_MainMenu")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @Html.Partial("_MainLogo")
    <div class="container body-content search_results">
        <div class="col-md-12">
            @Html.Partial("_MainSearch",(ListingSearchViewModel)ViewBag.searchViewModel)
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="left-column">
                    @Html.Partial("_GeneralSearch", (ListingSearchViewModel)ViewBag.searchViewModel)
                </div>
            </div>
            <div class="col-md-9">@RenderBody()</div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Zimpapers (Pvt) Ltd. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
